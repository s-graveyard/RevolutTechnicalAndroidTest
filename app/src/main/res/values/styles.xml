<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <style name="AppTheme.Head" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_head</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="AppTheme.SubHead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/text_size_subHead</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="AppTheme.ValueField" parent="Widget.AppCompat.EditText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
